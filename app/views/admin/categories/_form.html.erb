<%= @category.parent.name if @category.parent %>

<%= form_for [:admin, @category] do |f| %>
  <%= f.hidden_field :parent_id %>

  <label>Category name:</label>
  <%= f.text_field :name %>

  <label>Expires in (default):</label>
  

  <%= f.submit "Save", :class => "button highlightColor" %>
<% end %>

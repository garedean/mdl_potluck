<div class="breadcrumbs">
  <h1 id="titleHeading" class="titleHeading">USERS</h1>
  <% if current_user.admin? %>
  <span class="breadButtonRack">
    <%= link_to new_admin_user_path do %>
      <div class="cartBreadButton"><i class="fi-torso"></i><br>NEW</div>
    <% end %>
	</span>
  <% end %>
</div>
<div class="ingredientTable">
  <table>
    <thead>
      <tr>
        <th>EMAIL</th>
        <th>SIGN IN COUNT</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.sign_in_count %>
        </td>
      <% if current_user.admin? %>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user) %>
        </td>
        <td>
          <%= link_to "Delete", admin_user_path(user), confirm: "Are you sure?", method: :delete unless user.admin? %>
        </td>
      <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

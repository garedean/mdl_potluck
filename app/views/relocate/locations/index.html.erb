<div class="breadcrumbs">
  <%= link_to @ingredient.name, @ingredient %> &gt;

  LOCATIONS
</div>

<div class="listContainer">
  <ul class="mainUL">
    <% Location.roots.order(:name).each do |location| %>
      <li>
        <%= link_to relocate_ingredient_location_path(@ingredient, location) do %>
  		    <span class="button listButtons">
      	    <%= location.name %>
      	  </span><br>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

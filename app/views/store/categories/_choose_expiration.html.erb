<ul class="breadcrumbs">
  <h1 id="titleHeading" class="titleHeading">SELECT EXPIRATION DATE</h1>
  <span class="breadButtonRack">
		<input type="button" class="cartBreadButton backButton"   onclick="history.back(-1)" value="BACK"  />
	</span>
</ul>

<div id="choose-expiration-wrapper">

  <% if @category.default_expiration %>
    <p>This item's default expiration date is

      <%= distance_of_time_in_words(DateTime.now, @category.default_expiration_date) %>

      from now. Click to change:</p>
  <% end %>

  <%= form_for @ingredient do |f| %>
    <%= f.hidden_field :location_id, value: @location.try(:id) %>
    <%= f.hidden_field :category_id, value: @category.id %>
    <%= f.text_field :expiration_date, class: "datepicker", value: @category.default_expiration_date.strftime("%B %-e, %Y") %>
    <%= button_tag(type: "submit", class: "createIngredient") do %>
      <i class="fi fi-plus"></i> ADD ITEM
    <% end %>
  <% end %>
</div>

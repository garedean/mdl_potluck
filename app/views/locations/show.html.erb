<ul class="breadcrumbs">
  <% if @location.parent != nil && @location.parent.parent != nil && @location.parent.parent.parent != nil%>
  <li class="crumbles"><%= @location.parent.parent.parent.name %></li>
  <% end %>
  <% if @location.parent != nil && @location.parent.parent != nil%>
  <li class="crumbles"><%= @location.parent.parent.name %></li>
  <% end %>
  <% if @location.parent != nil %>
  <li class="crumbles"><%= @location.parent.name %></li>
  <% end %>
    <li class="crumbles"><%= @location.name %></li>
</ul>

<ul class="theList">
  <% @sublocations.each do |location| %>
    <li>
      <% if location.children.any? %>
        <%= link_to location_path(location) do %>
          <span class="button listButtons">
            <%= location.name %>
          </span><br><br>
        <% end %>
      <% else %>
        <%= link_to location_ingredients_path(location) do%>
          <span class="button listButtons">
             <%= location.name %>
          </span><br><br>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>

<a href="javascript:history.back()" class="button bigBottomButtonRight"><br><i class="fi-arrow-left size-48"></i></a>
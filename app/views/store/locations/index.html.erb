<div class="breadcrumbs">
  <%= link_to "Storage", store_path %> &gt;

  <%= link_to "Categories", store_categories_path %> &gt;

  <% @category.ancestors.each do |category| %>
    <%= link_to category.name, store_category_path(category) %> &gt;
  <% end %>

  LOCATIONS
</div>

<div class="listContainer">
  <ul class="mainUL">
    <li>
      <% unless @hide_no_location_option %>
        <%= link_to choose_expiration_store_category_path(@category), class: "button listButtons" do %>
          <i class="fi fi-minus-circle"></i>  Add without location
        <% end %>
      <% end %>
    </li>
    <% @locations.each do |location| %>
      <li>
        <%= hierarchy_link(location, :place_in_location, @category, "button listButtons") %>
      </li>
    <% end %>
  </ul>
</div>

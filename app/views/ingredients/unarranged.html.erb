<div class="ingredientTable">
  <table>
    <thead>
      <tr>
        <th width="160">NAME</th>
        <th>LOCATION</th>
        <th>LIFESPAN</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ingredients.where(:location_id => nil).each do |ingredient| %>
      <tr>
        <td> <%= ingredient.name %></td>
        <td> <%= ingredient.location_id %></td>
        <td> 
        <div class="progress radius success"><span class="meter success" style="width: 67%"></span></div>
        </td>
        <td class="btn btn-primary"> <%= link_to "Set Location",ingredient_path(ingredient) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
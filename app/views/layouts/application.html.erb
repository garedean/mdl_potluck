<!DOCTYPE html>
<html>
<head>
  <title>Potluck in the Park</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="Documents/git repos/potlock/potluck/app/assets/stylesheets/foundation-icons/foundation-icons.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>

  <div class="mobileBlock">
    <nav class="navbar">
      <div class="navbar-header">
      <!-- CLICK STORE/PREPARE change state in user model -->
        <%= link_to root_path, class: "navbar-brand" do %>
          <i class="fa fa-cubes"></i>
          <% current_user.update_attribute(:state, "store") %>
        <% end %>
        <% if current_user == nil %>
          <%= link_to new_user_session_path, class: "navbar-brand" do %>
            <i class="fa fa-spoon"></i>
          <% end %>
        <% else%>
          <%= link_to prepare_path, class: "navbar-brand" do %>
            <i class="fa fa-spoon"></i>
            <% current_user.update_attribute(:state, "prepare") %>
          <% end %>
        <% end %>
        <% if current_user != nil %>
          <% if current_user.cart.ingredients.count > 0 %>
            <%= link_to cart_path, class: "navbar-brand" do %>
              <i class="fa fa-shopping-cart size-18"></i> <%= current_user.cart.ingredients.count %>
            <% end %>
          <% end %>
        <% end %>

        <% if current_user %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-user-times navbar-brand userLogin"></i>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <i class="fa fa-user navbar-brand userLogin"></i>
          <% end %>
        <% end %>

      </div>
      <div class = "alertCenter" id="flash">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    </nav>

    <%= yield %>
  </div>

</body>
</html>

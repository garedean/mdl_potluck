<div class="itemContainer">
    <span class="hidden" id="titleFade"  >
    <h2><%= @ingredient.name %></h2> <small>ID: <%= @ingredient.id %></small>
    <hr></span>
  <div id="locationFade" class="hidden">
    <h6>LOCATION:</h6>
    <% if @ingredient.location_id != nil %>
      <% if @ingredient.location.parent != nil && @ingredient.location.parent.parent != nil && @ingredient.location.parent.parent.parent != nil%>
        <strong><%= @ingredient.location.parent.parent.parent.name %><br></strong>
      <% end %>
      <% if @ingredient.location.parent != nil && @ingredient.location.parent.parent != nil%>
        <strong><%= @ingredient.location.parent.parent.name %><br></strong>
      <% end %>
      <% if @ingredient.location.parent != nil %>
        <strong><%= @ingredient.location.parent.name %></strong><br>
      <% end %>
        <strong><%= @ingredient.location.name %></strong>
      <% else %>
      NOT SET
    <% end %><hr>
  </div>
  <div id="conditionFade" class="hidden">
    <h6>CONDITION:</h6>
    <% if @ingredient.expiring_at != nil %>
      <% if @ingredient.expiring_at.future? %>
        <div class="freshItem">FRESH</div>
      <% else %>
        <div class="expiredItem">EXPIRED</div>
      <% end %>
        <strong><%= @ingredient.expiring_at %></strong>
      <% else %>
        N/A
    <% end %>

    <hr>
  </div>
  <div id="quantityFade" class="hidden">
    <h6>TOTAL QUANTITY OF:   '<%= @ingredient.name %>'</h6>
      <strong><span id="item-count">
                <%= Ingredient.count_all_locations(@ingredient) %>
              </span></strong><br>
  </div>
</div>

<%= link_to relocate_ingredient_locations_path(@ingredient) do %>
  <span class="button bigBottomButtonLeft"><br><i class="fi-marker size-48"></i><br>MOVE</span>
<% end %>

<%= link_to store_path do %>
  <span class="button bigBottomButtonRight"><br><i class="fi-check size-48"></i><br>DONE</span>
<% end %>


<% if @located_item %>
  <%= render "located_quick_add" %>
<% end %>


<% if @unlocated_item %>
  <%= render "unlocated_quick_add" %>
<% end %>

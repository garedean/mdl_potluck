<ul class="breadcrumbs">
<br>
<br>
    <% if @category.parent_id != nil %>
      <% if @category.parent_id != nil %>
  		<% @rootCat = @categories[@category.parent_id - 1].parent_id %>
  		<% if @rootCat != nil %>
  		  <li class="crumbles"><%= @categories[@rootCat - 1].name %></li><br><br>
  		<% end %>
      <% end %>
        <li class="crumbles"><%= @categories[@category.parent_id - 1].name %><a href="#"></a></li><br><br>
    <% end %>
      	<li class="crumbles"><%= @category.name %><a href="#"></a></li><br><br>
</ul>


<ul class="theList">
  <% @items.each do |item| %>
    <li>

      <% if item.children.any? %>
        <%= link_to item.name, category_path(item) %>
      <% else %>
        <span class="btn listButtons">
          <%= link_to item.name, new_category_ingredient_path(item, Ingredient.new) %>
        </span><br>
      <% end %>
    </li>
    <br>
  <% end %>
</ul>

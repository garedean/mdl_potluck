<div class="ingredientTable">
  <table >
    <thead>
      <tr>
        <th width="100">ITEM</th>
        <th>ITEM ID</th>
        <th width="80">EXPIRING ON</th>
        <th>LIFESPAN</th>
      </tr>
    </thead>
    <tbody>
      <% @ingredients.each do |ingredient| %>
        <tr>
          <td class="button warning tableCell"> <%= link_to ingredient.name, ingredient_path(ingredient)%> </td>
          <td > <%= ingredient.id %><br><br></td>
          <td class="tableCell"> <%= ingredient.expiring_at %>
          </td>
          <td> 
          	<% if ingredient.expiring_at.future? %>
              <div class="progress radius success"><span class="meter success" style="width: 67%"></span></div>
            <% else %>
              <div class="progress radius success"><span class="meter success" style="width: 1%">&nbsp;&nbsp;&nbsp;EXPIRED</span></div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if category.parent %>
  <li class="adminLocationList">
<% else %>
  <li class="adminLocationListRoot">
<% end %>
  <%= link_to admin_category_path(category), data: {confirm: "Deleting this category will remove ALL food items nested within it in every subcategory! Are you sure?"}, method: :delete do %>
    <% if category.root? %>
      <span class="deleteSublocation red"><i class="fi-x-circle colorBlack"></i></span>
    <% elsif category.children? %>
      <span class="deleteSublocation lightRed"><i class="fi-x-circle colorBlack"></i></span>
    <% else %>
      <span class="deleteSublocation lighterRed"><i class="fi-x-circle colorBlack"></i></span>
    <% end %>
  <% end %>
  <%= link_to new_admin_category_path(parent_id: category) do %>
    <span class="addSublocation"><i class="fi-plus colorBlack"></i></span>
  <% end %>
  <%= category.name %>
</li><br>

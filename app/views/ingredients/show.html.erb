<% content_for :title do %>
  Item Details
<% end %>

<% content_for :header_icon do %>
  <%= header_link category_ingredients_path(@ingredient.category) %>
<% end %>

<!-- Event card -->
<style>
.demo-card-event.mdl-card {
  width: 100%;
  height: 256px;
  background-image: -webkit-linear-gradient(-70deg, #3E4EB8 13%, #ff4081 100%);
}
.demo-card-event > .mdl-card__actions {
  border-color: rgba(255, 255, 255, 0.2);
}
.demo-card-event > .mdl-card__title {
  align-items: flex-start;
}
.demo-card-event > .mdl-card__title > h4 {
  margin-top: 0;
}
.demo-card-event > .mdl-card__actions {
  display: flex;
  box-sizing:border-box;
  align-items: center;
}
.demo-card-event > .mdl-card__title,
.demo-card-event > .mdl-card__actions,
.demo-card-event > .mdl-card__actions > .mdl-button {
  color: #fff;
}
</style>

<div class="demo-card-event mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <h4>
      <span class="card-main"><%= @ingredient.name %></span><br>
      <span class="card-sub"><%= @ingredient.location.tree_format %></span>
    </h4>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Add to Cart
    </a>
    <div class="mdl-layout-spacer"></div>
    <i class="material-icons">add_shopping_cart</i>
  </div>
</div>

<div class="button-group item-details">
  <%= link_to "Relocate", relocate_ingredient_locations_path(@ingredient), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mega-btn" %>

  <%= link_to "View More of These", category_ingredients_path(@ingredient.category), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mega-btn" %>

  <%= link_to "Delete", ingredient_path(@ingredient), method: :delete, data: {confirm: "Are you sure?"}, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mega-btn" %>
</div>

<% if @show_quick_add %>
  <%= render "quick_add_lightbox" %>
<% end %>



<% if false %>

<!-- Wide card with share menu button -->
<style>
.demo-card-wide.mdl-card {
  width: 100%;
}
.demo-card-wide > .mdl-card__title {
  color: #fff;
  height: 176px;
  background-image: -webkit-linear-gradient(-60deg, #3f51b5 25%, #ff4081 100%);
}
.demo-card-wide > .mdl-card__menu {
  color: #fff;
}
</style>

<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text"><%= @ingredient.location.tree_format %></h2>
  </div>
  <div class="mdl-card__supporting-text">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    Mauris sagittis pellentesque lacus eleifend lacinia...
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Get Started
    </a>
  </div>
  <div class="mdl-card__menu">
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </div>
</div>

<% end %>

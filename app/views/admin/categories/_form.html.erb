<%= @category.parent.name if @category.parent %>

<%= form_for [:admin, @category] do |f| %>
  <%= f.hidden_field :parent_id %>

  <label>Category name:</label>
  <%= f.text_field :name %>

  <label>Default 'days until expiration' (initally set to parent category default)</label>
  <%= f.number_field :default_expiration, value: "#{@category.parent.try(:default_expiration)}" %>

  <%= f.submit "Save", :class => "managementButton" %>
<% end %>

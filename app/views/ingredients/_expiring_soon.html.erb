<ul class="mdl-list">
	<% @expiring_soons.each do |ingredient| %>
		<%= link_to ingredient_path(ingredient) do %>
			<li class="ripple" data-ripple-color="#3f51b5">
				<ul class="inner-link-list">
					<li class="indent">
						<%= ingredient.category.name %>
					</li>
					<li class="right-column">
						<%= expiration_message(ingredient) %>
					</li>
				</ul>
			</li>
		<% end %>
	<% end %>
</ul>

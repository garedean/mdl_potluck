<div class="breadcrumbs">
  <%= link_to "ADMIN TOOLS", admin_path %> &gt;

  RECENTLY LOGGED
</div>

<% if @ingredients.where(:used_on => nil).any? %>
  <div class="ingredientUL">
    <table class="tableFontSize">
      <thead>
        <tr>
          <th>NAME</th>
          <th>BOX ID</th>
          <th>USED ON</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.where.not(:used_on => nil).order('used_on DESC').each do |ingredient| %>
          <tr>
            <td class="tableCell">
              <%= link_to ingredient_path(ingredient) do %>
                <strong><%= ingredient.name %></strong>
              <% end %>
            </td>
            <td class="tableCell"> <%= ingredient.id %> </td>
            <td class="tableCell"> <%= ingredient.formatted_time_used %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <%= link_to store_path do%>
    <button class="mainColor arrangeReturn highlightColor">
      <h3>ALL ITEMS PLACED</h3><br>
      <h5><strong>RETURN</strong></h5>
    </button>
  <% end %>
<% end %>

<!-- comment out erb -->
<% if false %>
<% if @ingredient.location_id == nil %>
  <ul class="breadcrumbs" id="">
    <li class="crumbles"><strong>MOVING: <%= @ingredient.name %></strong></li><br>
  </ul>
  <ul class="theList">

    <% @locations.where(:parent_id => nil).each do |location| %>
      <li>
        <% if location.children.any? %>
          <%= link_to edit_location_ingredient_path(location, @ingredient) do%>
            <span class="button listButtons">
              <%= location.name %>
            </span><br>
          <% end %>
        <% else %>
          <%= link_to edit_location_ingredient_path(location, @ingredient) do%>
            <span class="button listButtons">
               <strong><%= location.name %></strong>
            </span>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <% else %>
  <ul class="breadcrumbs" id="">
    <li class="crumbles"><strong><%= @ingredient.name %></strong></li><br>
    <br>
    <% if @ingredient.location.parent != nil && @ingredient.location.parent.parent != nil && @ingredient.location.parent.parent.parent != nil%>
      <li class="crumbles"><%= @ingredient.location.parent.parent.parent.name %></li>
    <% end %>
    <% if @ingredient.location.parent != nil && @ingredient.location.parent.parent != nil%>
      <li class="crumbles"><%= @ingredient.location.parent.parent.name %></li>
    <% end %>
    <% if @ingredient.location.parent != nil %>
      <li class="crumbles"><%= @ingredient.location.parent.name %></li>
    <% end %>
      <li class="crumbles"><strong><%= @ingredient.location.name %></strong></li><br>
  </ul>
<% end %>

<% if @ingredient.location_id == nil %>
  <%= link_to store_path do %>
    <button class="button bigBottomButtonRight">
      <i class="fi-clock size-48"></i><br>MOVE LATER
    </button>
  <% end %>
<% end %>

<% if @ingredient.location_id != nil %>
  <div class="addButton">
    <%= form_for [@ingredient], :html => {:class => "form"} do |f| %>
      <%= f.hidden_field :location_id, :value => nil %>
      <br>
      <%= f.button :submit, :class => "buttons bigBottomButtonLeft" do %>
      <i class="fi-map size-48"></i>RELOCATE
      <% end %>
    <% end %>
  </div>
  <% end %>

  <!-- user state will shift between root path and prepare path -->
  <%= link_to store_path do %>
    <button class="button bigBottomButtonRight">
      <i class="fi-check size-48 yellowPlusButton"></i><br>DONE
    </button>
  <% end %>

<% end %>



<h2><%= @ingredient.name %></h2>
<% if @ingredient.location != nil %>
  <h4><%= @ingredient.location.name %></h2>
  <% else %>
  LOCATION NOT SET<br>
<% end %>

<div class="itemLifeSpanQuantity">
  <span>EXPIRING:<br><%= @ingredient.expiring_at %></span><br><br>
  <span>QUANTITY:<br><%= @ingredient.quantity %></span><br><br>
</div>


<%= link_to store_ingredient_locations_path(@ingredient) do %>
  <button class="bigBottomButtonLeft">UPDATE LOCATION</button>
<% end %>

<%= link_to store_path do %>
  <button class="bigBottomButtonRight">HOME</button>
<% end %>

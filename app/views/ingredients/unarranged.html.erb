<ul class="breadcrumbs">
  <h1 id="titleHeading" class="titleHeading">UNLOCATED ITEMS</h1>
  <span class="breadButtonRack">
    <%= link_to :back do %>
      <span class="cartBreadButton"><i class="fi fi-arrow-left"></i><br>BACK</span>
    <% end %>
  </span>
</ul>
<% if @ingredients.where(:location_id => nil).any? %>
  <div class="ingredientTable">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>NAME</th>
          <th>ITEM ID</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.where(:location_id => nil).each do |ingredient| %>
          <tr>
            <td>
              <%= link_to relocate_ingredient_locations_path(ingredient) do %>
                <div class="tableCellWidth">SET LOCATION</div>
              <% end %>
            </td>
            <td><%= ingredient.name %></td>
            <td><%= ingredient.id %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <%= link_to store_path do%>
    <button class="mainColor arrangeReturn highlightColor">
      <h3>ALL ITEMS PLACED</h3>
      <br>
      <h5><strong>RETURN</strong></h5>
    </button>
  <% end %>
<% end %>

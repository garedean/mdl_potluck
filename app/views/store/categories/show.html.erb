<% content_for :title do %>
  Add Inventory
<% end %>

<% content_for :header_icon do %>
  <%= header_link :root %>
<% end %>

<% content_for :breadcrumbs do %>
  <%= breadcrumb_menu do %>
    <%= breadcrumb_link "Categories", store_categories_path %>
    <%= ancestor_chain @category, :store %>
    <%= page_name @category.name %>
  <% end %>
<% end %>

<ul class="mdl-list">
  <% @category.children.order(:name).each do |item| %>
    <li class="ripple" data-ripple-color="#3f51b5">
      <%= hierarchy_link(item, :store, @food_category, "button listButtons li-link") %>
    </li>
  <% end %>
</ul>

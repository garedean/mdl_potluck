<ul class="mdl-list">
	<% Category.roots.order(:name).each do |category| %>
		<li class="ripple" data-ripple-color="#3f51b5">
			<%= link_to category_path(category) do %>
				<ul class="inner-link-list">
					<li class="list-item-count">
						<span class="circle">
							<%#= category.ingredients_count %>
							<%= category.descendant_count %>
						</span>
					</li>
					<li class="list-item-name">
						<%= category.name %>
					</li>
				</ul>
			<% end %>
		</li>
	<% end %>
</ul>

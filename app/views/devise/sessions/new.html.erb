<div class="deviseContainer">
  <div class="potluckLogo"><img src="<%= asset_path( 'PIP-254.png' ) %>" /></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">

    <%= f.email_field :email, autofocus: true %>
    <%= f.label :email %><br />
  </div>

  <div class="field">

    <%= f.password_field :password, autocomplete: "off" %>
    <%= f.label :password %>
  </div>
<hr>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <div class="actions">
    <%= f.submit "SIGN IN", :class => "loginButton highlightColor" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

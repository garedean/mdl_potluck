<% content_for :title do %>
  Location & Expiration for <%= @category.name %>
<% end %>

<% content_for :header_icon do %>
  <%= header_link store_category_path(@category.parent) %>
<% end %>

<% content_for :breadcrumbs do %>
  <%= breadcrumb_menu do %>
    <%= breadcrumb_link "Locations", store_category_locations_path(@category) %>
    <%= ancestor_chain @location, @category, :store_in_location %>
    <%= breadcrumb_link @location.name, store_category_location_path(@category, @location.parent) %>
    <%= page_name "Expiration Date for #{@category.name}" %>
  <% end %>
<% end %>

<% if false %>
<% content_for :breadcrumbs do %>
  <div id="breadcrumbs">
    <%= link_to "Choose Category", store_categories_path %> &gt;

    <% @category.ancestors.each do |category| %>
      <%= link_to category.name, store_category_path(category) %> &gt;
    <% end %>

    <%= link_to "Choose Location", store_category_locations_path(@category) %> &gt;

    <% @location.ancestors.each do |location| %>
      <%= link_to location.name, store_category_location_path(@category, location) %> &gt;
    <% end %>

    <%= link_to @location.name, store_category_location_path(@category, @location) %> &gt;

    <strong>
      Select Expiration
    </strong>

  </div>
<% end %>
<% end %>

When does this expire?

<%= form_for @ingredient do |f| %>
  <%= hidden_field_tag :location_id, @location.try(:id) %>
  <%= hidden_field_tag :category_id, @category.id %>

  <div>
    <%= f.radio_button :expiring_at, '2' %> 2 weeks
  </div>
  <div>
    <%= f.radio_button :expiring_at, '4' %> 1 month
  </div>
  <div>
    <%= f.radio_button :expiring_at, '8' %> 2 months
  </div>
  <div>
    <%= f.radio_button :expiring_at, '12' %> 3 months
  </div>
  <div>
    <%= f.radio_button :expiring_at, '24' %> 6 months
  </div>
  <div>
    <%= f.radio_button :expiring_at, '48' %> 1+ years
  </div>

  <%= f.submit %>
<% end %>

<% if category.parent %>
  <li class="adminLocationList">
<% else %>
  <li class="adminLocationListRoot">
<% end %>
  <%= link_to admin_category_path(category), confirm: "You sure?", method: :delete do %>
    <% if category.root? %>
      <button class="deleteSublocation"><i class="fi-x-circle size-24 makeBlack"></i></button>
    <% elsif category.children? %>
      <button class="deleteSublocationLight"><i class="fi-x-circle size-24 makeBlack"></i></button>
    <% else %>
      <button class="deleteSublocationLighter"><i class="fi-x-circle size-24 makeBlack"></i></button>
    <% end %>
  <% end %>
  <%= category.name %>
  <%= link_to new_admin_category_path(parent_id: category) do %>
    <button class="addSublocation"><i class="fi-plus size-24 makeBlack"></i></button>
  <% end %>
</li><br>

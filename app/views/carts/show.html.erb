<%= link_to "Empty cart", empty_cart_path, method: :post %><br>
<%= link_to "Use all items", use_all_items_path, method: :post %>


<ul>
  <% @cart_items.each do |cart_item| %>
    <li>
      <%= cart_item.name %>
      <%= link_to "X", remove_from_cart_path(cart_item), method: :post, action: :remove_from_cart %>
    </li>
  <% end %>
</ul>

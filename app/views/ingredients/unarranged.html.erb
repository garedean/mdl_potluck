<% if @ingredients.where(:location_id => nil).any? %>
  <div class="ingredientTable">
    <table class="tableFontSize">
      <thead>
        <tr>
          <th width="120">NAME</th>
          <th>ITEM ID</th>
          <th>LOCATION</th>
          <th width="100"></th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.where(:location_id => nil).each do |ingredient| %>
          <tr>
            <td class="tableCell"><%= ingredient.name %></td>
            <td class="tableCell"><%= ingredient.id %> </td>
            <td class="tableCell">N/A</td>
            <td>
              <%= link_to relocate_ingredient_locations_path(ingredient) do %>
                <div class="button highlightColor setLocationButton">
                  SET LOCATION
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <a href="javascript:history.back()" class="button bigBottomButtonRight"><br><br><i class="fi-arrow-left size-48"></i></a>
<% else %>
  <%= link_to store_path do%>
    <button class="mainColor arrangeReturn highlightColor">
      <h3>ALL ITEMS PLACED</h3>
      <br>
      <h5><strong>RETURN</strong></h5>
    </button>
  <% end %>
<% end %>

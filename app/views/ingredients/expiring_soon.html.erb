<div class="ingredientTable">
  <table>
    <thead>
      <tr>
        <th width="200"></th>
        <th width="90"></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @ingredients.where(expiring_at: Time.now - 3.day..Time.now + 3.day).each do |ingredient| %>
        <tr>
          <td>
            <%= link_to ingredient_path(ingredient) do %>
              <div class="button highlightColor tableCell tableCellWidth" id="listButton">
                <%= ingredient.name %>
              </div >
            <% end %>
            <span class="littleBreadcrumbs">
              <% if ingredient.location_id != nil %>
                <% if ingredient.location.parent != nil && ingredient.location.parent.parent != nil && ingredient.location.parent.parent.parent != nil%>
                  <strong><%= ingredient.location.parent.parent.parent.name %> ></strong>
                <% end %>
                <% if ingredient.location.parent != nil && ingredient.location.parent.parent != nil%>
                  <strong><%= ingredient.location.parent.parent.name %> ></strong>
                <% end %>
                <% if ingredient.location.parent != nil %>
                  <strong><%= ingredient.location.parent.name %> ></strong>
                <% end %>
                  <strong><%= ingredient.location.name %></strong>
                <% else %>
                  NO LOCATION
              <% end %>
            </span>
          </td>
          <td class="tableCell">
            <% if ingredient.expiring_at != nil %>
              <% if ingredient.expiring_at.future? %>
                <div class="freshItem">FRESH</div>
              <% else %>
                <div class="expiredItem">EXPIRED</div>
              <% end %>
                <%= ingredient.expiring_at %>
              <% else %>
                N/A
            <% end %>
          </td>
          <td>
            <%= link_to add_to_cart_path(ingredient), method: :post do %>
              <div class="button highlightColor cartButton">
                <i class="fi-shopping-cart size-24 makeBlack"></i>
              </div >
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="bottomDescription">
  <p>Items will appear here if they have expired within the past 3 days or will expire in the next 3 days.</p>
</div>
<a href="javascript:history.back()" class="button bigBottomButtonRight"><br><br><i class="fi-arrow-left size-48"></i></a>

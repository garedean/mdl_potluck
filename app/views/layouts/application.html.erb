<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Potluck in the Park</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
      <div id="mobileBlock" class="mobileBlock">
        <nav class="navbar">
            <%= link_to store_path do %>
              <i class="fa fa-cube navbar-icon"></i>
            <% end %>
            <% if current_user == nil %>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-spoon navbar-icon"></i>
              <% end %>
            <% else %>
              <%= link_to prepare_path do %>
                <i class="fa fa-spoon navbar-icon"></i>
              <% end %>
            <% end %>
            <% if current_user && current_user.cart.ingredients.count > 0 %>
              <%= link_to cart_path do %>
                <i class="fa fa-shopping-cart size-18 navbar-icon">
                  <%= current_user.cart.ingredients.count %></i>
              <% end %>
            <% end %>
            <% if current_user %>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-user-times navbar-icon"></i>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-user userLogin navbar-icon"></i>
              <% end %>
            <% end %>
          <%= link_to admin_path do %>
            <i class="fi fi-sheriff-badge  navbar-icon"></i>
          <% end %>
           <%= link_to :back do %>
              <i class="fi fi-arrow-left backButton navbar-icon"></i>
            <% end %>
        </nav>
          <%= yield %>
          <div class = "alertCenter" id="flash">
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>
      </div>
  </body>
</html>

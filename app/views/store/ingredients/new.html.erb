<ul class="breadcrumbs">
  <% if @food_item.parent != nil && @food_item.parent.parent != nil && @food_item.parent.parent.parent != nil%>
		<li class="crumbles"><%= @food_item.parent.parent.parent.name %></li>
	<% end %>
	<% if @food_item.parent != nil && @food_item.parent.parent != nil%>
		<li class="crumbles"><%= @food_item.parent.parent.name %></li>
	<% end %>
	<% if @food_item.parent != nil %>
		<li class="crumbles"><%= @food_item.parent.name %></li>
	<% end %>
    <li class="crumbles"><strong><%= @food_item.name %></strong></li><br>
</ul>

<div class="expirationSelector itemContainer">
    <h4>EXPIRATION DATE</h4>
    <input type="date">
</div>
</div>

<%= link_to add_with_location_store_ingredient_path(@food_item), method: :post do %>
  <span class="button bigBottomButtonLeft"><br><i class="fi-marker size-48"></i><br>LOCATE</span>
<% end %>

<%= link_to store_category_ingredients_path(@food_item), id: "add-item", method: :post do %>
  <span class="button bigBottomButtonRight"><br><i class="fi-plus size-48"></i><br>ITEM W/O LOCATION</span>
<% end %>

<% if false %>
  <%= form_tag({controller: "ingredients", action: "create"}, method: "post") do %>
  	<label>Days until expired:</label>
  	<%= number_field_tag :days_until_expiry, "30" %>

  	<%= submit_tag 'Add with Location', name: 'create_and_place' %>
  	<%= submit_tag 'Add without Location' %>
  <% end %>
<% end %>

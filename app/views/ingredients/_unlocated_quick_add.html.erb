<div class="lightbox-wrapper fade-in">

  <div class="lightbox">
    <%= link_to ingredient_path(@ingredient), class: "close-lightbox" do %>
      close
    <% end %>

    <h2>Success!</h2>

    <p>You just added a '<%= @ingredient.name %>.'
    <p>Total: <%= Ingredient.count_all_locations(@ingredient) %></p>
    <p>This item was added without placing it in a location.</p>

    <ul>
      <li>
        <%= link_to "Add another without a location", store_category_ingredients_path(@ingredient, category_id: @ingredient.category.id), method: :post %>
      </li>

      <li>
        <%= link_to "Add another somewhere else", new_store_category_ingredient_path(@ingredient.category) %>
      </li>
    </ul>
  </div>
</div>

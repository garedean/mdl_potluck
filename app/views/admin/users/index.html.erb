<div class="ingredientTable">
  <table>
    <thead>
      <tr>
        <th>EMAIL</th>
        <th>SIGN IN COUNT</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>

      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.sign_in_count %>
        </td>
        <td>
          <% if current_user.admin? %>
            <%= link_to edit_admin_user_path(user) do %>
              <div class="button">EDIT</div>
            <% end %>
        </td>
        <td>
          <%= link_to admin_user_path(user), data: { confirm: "Are you sure?" }, method: :delete do %>
            <div class="button">DELETE</div>
          <% end %>
        </td>
      <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if current_user.admin? %>
  <%= link_to new_admin_user_path do %>
    <div class="mainButton"><i class="fi-torso"></i><br>NEW USER</div>
  <% end %>
<% end %>

<ul class="theList">
  <% @sublocations.each do |location| %>
    <li>
      <% if location.children.any? %>
        <%= link_to location_path(location) do %>
          <span class="btn listButtons">
            <%= location.name %>
          </span><br><br>
        <% end %>
      <% else %>
        <%= link_to location_ingredients_path(location) do%>
          <span class="btn listButtons">
             <%= location.name %>
          </span><br><br>
        <% end %>
      <% end %>
      <%= link_to location.name, location_path(location) %>
    </li>
  <% end %>
</ul>


<div class="breadcrumbs">
  <%= link_to "ITEM SUMMARY", :back %>

  <%= link_to relocate_ingredient_locations_path(@ingredient) do %>
    <div class="cartNavButton"><i class="fi-marker"></i>  MOVE</div>
  <% end %>

  <%= link_to ingredient_path(@ingredient), method: :delete, data: {confirm: "Are you sure?"} do %>
    <div class="cartNavButton"><i class="fa fa-trash"></i>  TRASH</div>
  <% end %>

</div>

<div class="itemContainer">
  <%= link_to add_to_cart_path(@ingredient), method: :post do %>
    <div class="cartItemButton">
      <i class="fa fa-shopping-cart colorGray"></i>  CART
    </div>
  <% end %>

  <h2><%= @ingredient.name %></h2>
  <h6>Box ID:  <%= @ingredient.id %></h6>
  <% if @ingredient.expiration_date %>
    <% if @ingredient.expiration_date.future? %>
      <div class="freshItem">FRESH</div>
    <% else %>
      <div class="expiredItem">EXPIRED</div>
    <% end %>
  <% end %>

  <hr>


  <span class="itemDetailsHeader">LOCATION:</span>
  <span class="itemDetails"><br>
    <% @ingredient.location.ancestors.each do |location| %>
      <%= location.name %> &gt;
    <% end %>
    <%= @ingredient.location.name %>

  <% if @ingredient.assigned_location? %>
  <% else %>
  <br>
    <%= link_to relocate_ingredient_locations_path(@ingredient) do %>
      <span class="colorBlue"><i class="fi-marker colorBlue"></i>  PLACE</span>
    <% end %>
  <% end %>
  </span>
  <br><br>

  <span class="itemDetailsHeader">EXPIRATION DATE:</span>
  <span class="itemDetails"><br>
    <%= @ingredient.expiration_date.strftime("%b %d, %Y") %>
  </span>
  <br><br>

  <span class="itemDetailsHeader">TOTAL STOCK:</span>
  <span class="itemDetails"><br>
    <%= Ingredient.count_all_locations(@ingredient) %>
  </span>

</div>

<% if @show_quick_add %>
  <%= render "quick_add_lightbox" %>
<% end %>

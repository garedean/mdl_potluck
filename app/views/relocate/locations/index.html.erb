<% content_for :title do %>
  Relocate <%= @ingredient.name %>
<% end %>

<% content_for :header_icon do %>
  <%= header_link ingredient_path(@ingredient) %>
<% end %>

<div class="mdl-list">
  <% Location.roots.order(:name).each do |location| %>
    <li class="ripple full-width" data-ripple-color="#3f51b5">
      <%= hierarchy_link(location, :relocate, @ingredient, "button listButtons li-link") %>
    </li>
  <% end %>
</div>

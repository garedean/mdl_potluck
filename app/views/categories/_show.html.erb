<% link_type ||= nil %>

<ul class="breadcrumbs">
  <% if @food_category.parent != nil && @food_category.parent.parent != nil && @food_category.parent.parent.parent != nil%>
		<li class="crumbles"><%= @food_category.parent.parent.parent.name %></li>
	<% end %>
	<% if @food_category.parent != nil && @food_category.parent.parent != nil%>
		<li class="crumbles"><%= @food_category.parent.parent.name %></li>
	<% end %>
	<% if @food_category.parent != nil %>
		<li class="crumbles"><%= @food_category.parent.name %></li>
	<% end %>
    <li class="crumbles"><%= @food_category.name %></i></li><br>
    <span class="breadButtonRack">
  		<%= link_to :back do %>
  			<span class="cartBreadButton"><i class="fi fi-arrow-left"></i><br>BACK</span>
  		<% end %>
  	</span>
</ul>

<ul class="theList">
  <% @food_category_children.each do |item| %>

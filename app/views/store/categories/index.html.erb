<% content_for :title do %>
  Add Inventory
<% end %>

<% content_for :header_icon do %>
  <%= header_link :back %>
<% end %>

<% content_for :breadcrumbs do %>
  <%= breadcrumb_menu do %>
    <%= page_name "Categories" %>
  <% end %>
<% end %>

<ul class="mdl-list">
	<% Category.roots.order(:name).each do |category| %>
		<li class="ripple" data-ripple-color="#3f51b5">
			<%= link_to store_category_path(category) do %>
				<ul class="inner-link-list">
					<li class="list-item-name">
						<%= category.name %>
					</li>
				</ul>
			<% end %>
		</li>
	<% end %>
</ul>
